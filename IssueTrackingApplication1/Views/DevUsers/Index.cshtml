
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout2.cshtml";
}

<div class="main-wrapper account-wrapper" style="margin-top:5rem">
    <div class="account-page">
        <div class="account-center">
            <div class="account-box">
                <form class="form-signin">

                    @Html.Partial("FirstLayoutLogo")
                    <div id="responseMessage"></div>
                    <input type="hidden" value="" id="responseCode" />
                    <div class="form-group">

                        <label>Username or Email</label>
                        <input type="text" autofocus="" class="form-control" id="Username" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" id="Password" required>
                    </div>
                    <div class="form-group text-right">
                        <a href="/Home/ForgetPassword">Forgot your password?</a>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary account-btn" id="LoginBtn">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
