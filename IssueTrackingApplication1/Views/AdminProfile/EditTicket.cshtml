@using IssueTrackingApplication1.Models
@{
    ViewBag.Title = "EditTicket";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@{
            var record = Session["user2"] as IssueInfo;
}

@Html.Partial("AdminSideBar")
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2" style="background-color:white; padding-top:30px;">
                <h4 class="page-title">Assign Ticket</h4>
            </div>
        </div>
       
        <div class="row">
            <div class="col-lg-8 offset-lg-2" style="background-color:white; padding-bottom:30px;">
                <form action="" method="post">
                    <div class="row">
                        <input type="hidden" value=@record.UserId name="UserId" />
                        <div class="form-group col-sm-6 col-md-12 col-lg-12">
                            <label>Tracking Id</label>
                            <input type="text" value="@record.TicketId" class="form-control" name="TrackingId" rows="3" cols="30" readonly>
                        </div>
                        <div class="form-group col-sm-6 col-md-12 col-lg-12">
                            <label>Created By</label>
                            <input type="text" value="@record.Email" class="form-control" name="Email" rows="3" cols="30" readonly>
                        </div>
                            
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Closed By</label>
                                    <select class="form-control" name="ClosedBy">
                                        <option value="@record.ClosedBy">@record.ClosedBy</option>
                                        <option value="Mildest_Vincent@yahoo.com">Chigozie Vincent</option>
                                        <option value="Domebingonye@Inlaks.com">Ogiogio Emmanuel</option>
                                    </select>
                                </div>
                            </div>
                        
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label>AssignTo</label>
                                <select class="form-control" name="AssignTo">
                                    <option value="@record.AssignTo">@record.AssignTo</option>
                                    <option value="Mildest_Vincent@yahoo.com">Chigozie Vincent</option>
                                    <option value="Domebingonye@Inlaks.com">Ogiogio Emmanuel</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" name="Status">
                                    <option value="@record.Status">@record.Status</option>
                                    <option value="In-Progress">In-Progress</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                        </div>
                        <div class="m-t-20 text-center col-sm-12">
                            <button type="submit" class="btn btn-primary submit-btn">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

